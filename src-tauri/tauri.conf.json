{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "watson",
  "version": "1.2.0",
  "identifier": "com.watson.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Watson",
        "width": 600,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "center": true,
        "visible": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/William-Long-II/watson/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEREMzdGNDA0QUIxQjBFM0QKUldROURodXJCUFEzM1pwdUNKeUlCaHpIMzM0b3ZVS0ppc3F4cnlQQVh3YXhYY3phbH"
    }
  }
}
